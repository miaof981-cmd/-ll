.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.success-box {
  background-color: #4CAF50;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.success-text {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.info-box {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

.info-box text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

