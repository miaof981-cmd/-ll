/* pages/records/records.wxss */

/* 用户信息 */
.user-info {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  background: #1f6feb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 26rpx;
  color: #666;
}

.logout-btn {
  background: #dc3545;
  color: white;
  border: none;
  border-radius: 20rpx;
}

/* 标签页 */
.tabs {
  background: white;
  display: flex;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #1f6feb;
  border-bottom-color: #1f6feb;
  font-weight: bold;
}

/* 标签页内容 */
.tab-content {
  min-height: 400rpx;
}

/* 成绩卡片 */
.grade-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.grade-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.grade-term {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.grade-average {
  font-size: 26rpx;
  color: #1f6feb;
  background: #f0f7ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.grade-subjects {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.subject-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.subject-name {
  font-size: 28rpx;
  color: #333;
}

.subject-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f6feb;
}

/* 处分记录卡片 */
.punishment-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #ffc107;
}

.punishment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.punishment-date {
  font-size: 24rpx;
  color: #999;
}

.punishment-reason {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.image-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.image-thumbnail {
  width: 100%;
  height: 200rpx;
}

.image-info {
  padding: 20rpx;
}

.image-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.image-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.image-date {
  font-size: 22rpx;
  color: #999;
}
