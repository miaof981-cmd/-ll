/* pages/records/records.wxss - 精致瀑布流档案页 */

.records-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding-bottom: 40rpx;
}

/* ==================== 顶部标题栏 ==================== */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx 24rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.header-icon {
  font-size: 32rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.header-right {
  display: flex;
  gap: 16rpx;
}

.btn-edit, .btn-add {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-edit {
  background: #ecf0f1;
  color: #34495e;
}

.btn-add {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.header-action {
  padding: 12rpx 24rpx;
  background: #ecf0f1;
  border-radius: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* ==================== 学生信息卡片 ==================== */
.student-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.info-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.student-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 60rpx;
}

.student-basic {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-name {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.student-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.student-class {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  width: fit-content;
}

.profile-action {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.action-text {
  font-size: 24rpx;
  color: white;
}

.info-details {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.detail-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.detail-value {
  font-size: 26rpx;
  font-weight: 500;
  color: white;
}

/* ==================== 旧样式（保留兼容） ==================== */
.user-profile-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  padding: var(--spacing-xl);
  margin: var(--spacing-lg);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
}

.profile-avatar {
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.avatar-icon {
  font-size: 48rpx;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-white);
}

.profile-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.profile-action {
  padding: 16rpx 28rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  backdrop-filter: blur(10rpx);
}

.profile-action:active {
  background: rgba(255, 255, 255, 0.3);
}

.action-text {
  font-size: 26rpx;
  color: var(--text-white);
  font-weight: 500;
}

/* ==================== 档案标题栏 ==================== */
.section-title-bar {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 0 var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.section-icon {
  font-size: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

/* ==================== 瀑布流容器 ==================== */
.waterfall-container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  padding: 0 var(--spacing-lg);
}

/* ==================== 档案卡片基础样式 ==================== */
.archive-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: fadeIn 0.5s ease-out;
}

.archive-card:active {
  transform: translateY(-4rpx) scale(1.01);
  box-shadow: var(--shadow-xl);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--bg-tertiary);
  border-bottom: 2rpx solid var(--border-light);
}

.card-icon {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  background: var(--bg-primary);
  border-radius: 50%;
}

.card-icon.warning {
  background: rgba(245, 158, 11, 0.1);
}

.card-type {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.card-body {
  padding: var(--spacing-lg);
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.card-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.card-footer {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--bg-secondary);
  border-top: 2rpx solid var(--border-light);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-date {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* ==================== 学籍档案卡片 ==================== */
.profile-card {
  border-left: 6rpx solid #667eea;
}

.profile-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.profile-photo {
  position: relative;
  width: 200rpx;
  height: 260rpx;
  margin: 0 auto;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.photo-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.6);
}

.photo-label {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 22rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.info-row:active {
  background: #ecf0f1;
}

.info-label {
  width: 120rpx;
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 500;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 600;
}

/* ==================== 成绩卡片 ==================== */
.grade-card {
  border-left: 6rpx solid var(--primary-color);
}

.grade-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grade-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.subject {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.score {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.average-badge {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--text-white);
  padding: 12rpx 24rpx;
  border-radius: var(--radius-md);
  font-size: 24rpx;
  font-weight: 600;
}

/* ==================== 处罚记录卡片 ==================== */
.punishment-card {
  border-left: 6rpx solid var(--accent-color);
}

.punishment-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.type-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.type-value {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--accent-color);
  background: rgba(245, 158, 11, 0.1);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
}

.punishment-reason {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.7;
}

/* ==================== 图片档案卡片 ==================== */
.image-card {
  border-left: 6rpx solid #10b981;
}

.card-image {
  width: 100%;
  display: block;
  background: var(--bg-tertiary);
}

/* ==================== 编辑模式样式 ==================== */
.section-title-bar {
  justify-content: space-between;
}

.title-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-right {
  display: flex;
  gap: 16rpx;
}

.btn-edit, .btn-add {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  border-radius: var(--radius-md);
  border: none;
}

.btn-edit {
  background: var(--primary-color);
  color: white;
}

.btn-add {
  background: var(--success-color);
  color: white;
}

.archive-card.editing {
  position: relative;
}

.card-delete {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: var(--error-color);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  z-index: 10;
}

.card-delete:active {
  transform: scale(0.9);
}

/* ==================== 添加档案弹窗 ==================== */
.add-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.add-dialog {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: var(--radius-xl);
  overflow: hidden;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid var(--border-light);
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.dialog-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: var(--text-secondary);
}

.dialog-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.form-item .input,
.form-item .textarea {
  width: 100%;
  padding: 20rpx;
  border: 1px solid var(--border-light);
  border-radius: var(--radius-md);
  font-size: 28rpx;
}

.form-item .textarea {
  min-height: 120rpx;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
}

.image-upload .preview {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-md);
}

.image-upload .upload-btn {
  width: 100%;
  height: 100%;
  border: 2px dashed var(--border-light);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: var(--text-secondary);
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1px solid var(--border-light);
}

.dialog-footer button {
  flex: 1;
  padding: 24rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: var(--bg-secondary);
  color: var(--text-secondary);
}

.btn-save {
  background: var(--primary-color);
  color: white;
}
