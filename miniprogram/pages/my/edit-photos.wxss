/* pages/my/edit-photos.wxss */
.edit-photos-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* ==================== 顶部标题栏 ==================== */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.back-icon {
  font-size: 48rpx;
  font-weight: 300;
  color: #1a56db;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.header-info {
  font-size: 28rpx;
  color: #64748b;
}

.student-name {
  font-weight: 500;
}

/* ==================== 提示信息 ==================== */
.tip-box {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #e0f2fe 0%, #bfdbfe 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #3b82f6;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1e3a8a;
  line-height: 1.6;
}

/* ==================== 照片区域 ==================== */
.photos-section {
  margin: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.photo-count {
  font-size: 24rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.photo-count.locked {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  color: #1e40af;
  font-weight: 500;
}

.photo-count.editable {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  color: #92400e;
  font-weight: 600;
}

/* 照片网格 - 改为2列，照片更大 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* 单列显示（证件照） */
.photos-grid.single {
  grid-template-columns: 1fr;
  max-width: 400rpx;
}

/* 照片卡片 */
.photo-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.photo-card:active {
  transform: scale(0.98);
}

.photo-card.locked {
  border: 2rpx solid #3b82f6;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

/* 照片容器 */
.photo-container {
  position: relative;
  width: 100%;
  padding-bottom: 133%; /* 4:3 比例，更高 */
  overflow: hidden;
  background: #f1f5f9;
}

.photo-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 预览遮罩 */
.photo-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.photo-container:active .photo-overlay {
  background: rgba(0, 0, 0, 0.3);
}

.preview-text {
  color: white;
  font-size: 24rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.photo-container:active .preview-text {
  opacity: 1;
}

/* 照片底部操作区 */
.photo-footer {
  display: flex;
  background: #f8fafc;
  border-top: 1rpx solid #e2e8f0;
}

.footer-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  transition: all 0.2s ease;
}

.footer-btn:active {
  background: #e2e8f0;
}

.replace-btn {
  border-right: 1rpx solid #e2e8f0;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #475569;
  font-weight: 500;
}

.replace-btn .btn-text {
  color: #3b82f6;
}

.replace-btn.full {
  border-right: none;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.replace-btn.full .btn-text {
  color: #1e40af;
  font-weight: 600;
}

.replace-btn.full:active {
  background: linear-gradient(135deg, #bfdbfe 0%, #93c5fd 100%);
}

.delete-btn .btn-text {
  color: #ef4444;
}

/* 锁定底部 */
.locked-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
  padding: 20rpx;
  border-top: 1rpx solid #3b82f6;
}

.lock-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.lock-icon {
  font-size: 24rpx;
}

.lock-text {
  font-size: 24rpx;
  color: #1e40af;
  font-weight: 500;
}

/* 添加卡片 */
.add-card {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border: 2rpx dashed #cbd5e1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-card:active {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
  border-color: #3b82f6;
}

.add-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 60rpx 20rpx;
}

.add-icon-large {
  font-size: 80rpx;
  color: #94a3b8;
  font-weight: 300;
}

.add-text {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
}

.add-hint {
  font-size: 22rpx;
  color: #94a3b8;
}

/* ==================== 说明区域 ==================== */
.info-section {
  margin: 24rpx;
  padding: 32rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.info-dot {
  color: #3b82f6;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1.6;
}

.info-text {
  flex: 1;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}
