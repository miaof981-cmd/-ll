/* pages/my/my.wxss */

.login-tip {
  background: white;
  padding: 60rpx 40rpx;
  text-align: center;
}
.tip-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.tip-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 24rpx;
}
.login-btn {
  display: inline-block;
  background: #1f6feb;
  color: #fff;
  padding: 20rpx 36rpx;
  border-radius: 8rpx;
}

.profile {
  background: white;
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.avatar { font-size: 64rpx; margin-right: 20rpx; }
.info { flex: 1; }
.name { font-size: 30rpx; font-weight: bold; }
.id { font-size: 24rpx; color: #666; }
.logout { background: #f5f5f5; }

.admin-entry { padding: 0 30rpx 20rpx; }
.admin-btn { width: 100%; background: #333; color: #fff; }

.admin-actions { padding: 0 20rpx 20rpx; }
.actions-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx; }
.action-card { background: #fff; border-radius: 12rpx; padding: 28rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.action-card.primary { background: #111827; color: #fff; }

.waterfall { display: flex; gap: 20rpx; padding: 0 20rpx 20rpx; }
.column { flex: 1; display: flex; flex-direction: column; gap: 20rpx; }
.card { background: white; padding: 16rpx; border-radius: 16rpx; overflow: hidden; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06); }
.card-image { width: 100%; border-radius: 12rpx; margin-bottom: 12rpx; background: #f3f4f6; }
.card-title { font-size: 28rpx; font-weight: 600; color: #111827; margin-bottom: 8rpx; }
.card-content { font-size: 24rpx; color: #6b7280; margin-bottom: 8rpx; line-height: 1.6; }
.card-meta { font-size: 22rpx; color: #9ca3af; }
.card-tag { display: inline-block; font-size: 22rpx; color: #2563eb; background: #eff6ff; padding: 6rpx 12rpx; border-radius: 999rpx; margin-bottom: 8rpx; }
.card-tag.warn { color: #b45309; background: #fffbeb; }
.card-tag.success { color: #047857; background: #ecfdf5; }

