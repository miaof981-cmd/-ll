/* pages/my/my.wxss - 个人中心样式 */
.my-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* ==================== 用户卡片 ==================== */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.roles-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.role-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  backdrop-filter: blur(10px);
}

.role-badge.admin {
  background: rgba(239, 68, 68, 0.3);
}

.role-badge.photographer {
  background: rgba(16, 185, 129, 0.3);
}

.role-badge.parent {
  background: rgba(59, 130, 246, 0.3);
}

.role-icon {
  font-size: 28rpx;
}

.role-name {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* OpenID 显示区域 */
.openid-box {
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s;
}

.openid-box:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.openid-label {
  flex-shrink: 0;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.8);
}

.openid-value {
  flex: 1;
  margin: 0 12rpx;
  font-family: 'Monaco', 'Courier New', monospace;
  word-break: break-all;
  color: white;
  font-size: 20rpx;
}

.copy-icon {
  flex-shrink: 0;
  font-size: 28rpx;
}

/* ==================== 孩子列表 ==================== */
.children-section {
  margin: 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  padding: 8rpx 20rpx;
  background: #3b82f6;
  color: white;
  border-radius: 32rpx;
  font-size: 24rpx;
}

.empty-tip {
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-hint {
  font-size: 24rpx;
  color: #ccc;
}

.child-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.child-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.child-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.child-detail {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* ==================== 功能区 ==================== */
.admin-section,
.photographer-section,
.menu-section {
  margin: 24rpx 32rpx;
}

.menu-item {
  background: white;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-icon {
  font-size: 40rpx;
  width: 56rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* ==================== 退出登录 ==================== */
.logout-section {
  margin: 40rpx 32rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ef4444;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 2rpx solid #fee2e2;
}

.logout-btn::after {
  border: none;
}

/* ==================== 未登录状态 ==================== */
.not-login {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  padding: 60rpx;
}

.login-icon {
  font-size: 160rpx;
  opacity: 0.3;
}

.login-tip {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.login-subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.login-btn {
  width: 500rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.enroll-btn {
  width: 500rpx;
  height: 88rpx;
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn::after {
  border: none;
}
