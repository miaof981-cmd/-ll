/* 测试订阅消息页面样式 */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 调试日志 */
.debug-log {
  background: #1e1e1e;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  max-height: 400rpx;
  overflow-y: auto;
}

.debug-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4ade80;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #333;
}

.debug-text {
  display: block;
  font-size: 24rpx;
  color: #d4d4d4;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: 'Courier New', monospace;
}

.debug-text.empty {
  color: #888;
  font-style: italic;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 400rpx;
  word-break: break-all;
}

/* 测试按钮 */
.test-buttons {
  margin: 40rpx 0;
}

.test-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
}

.test-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
}

.test-btn.success {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
  border: none;
}

.test-btn.warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
}

/* 结果卡片 */
.result-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.result-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.clear-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 提示卡片 */
.tips-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx 0;
}

.tip-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #667eea;
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 检查清单 */
.checklist-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.checklist-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #667eea;
  margin-right: 15rpx;
}

.checklist-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

