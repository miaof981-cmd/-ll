/* pages/apply/photographer.wxss - 选择摄影师样式 */

.photographer-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding-bottom: 140rpx;
}

/* ==================== 步骤进度条（复用） ==================== */
.steps-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e2e8f0;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.step.active .step-number {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(26, 86, 219, 0.3);
}

.step.completed .step-number {
  background: #10b981;
  color: #ffffff;
}

.step-label {
  font-size: 22rpx;
  color: #94a3b8;
  white-space: nowrap;
}

.step.active .step-label {
  color: #1a56db;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: #e2e8f0;
  margin: 0 8rpx;
}

.step-line.active {
  background: linear-gradient(90deg, #1a56db 0%, #3b82f6 100%);
}

/* ==================== 页面标题 ==================== */
.page-header {
  text-align: center;
  padding: 48rpx 32rpx 32rpx;
}

.header-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e3a8a;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #64748b;
}

/* ==================== 摄影师列表 ==================== */
.photographer-list {
  padding: 0 32rpx;
}

.photographer-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.photographer-card.selected {
  border-color: #1a56db;
  box-shadow: 0 8rpx 32rpx rgba(26, 86, 219, 0.2);
}

.selected-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  padding: 8rpx 24rpx;
  border-radius: 0 24rpx 0 24rpx;
  font-size: 22rpx;
  font-weight: 600;
}

/* ==================== 摄影师头像 ==================== */
.photographer-avatar {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  float: left;
  margin-right: 24rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid #e2e8f0;
}

.avatar-badge {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  color: #ffffff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  font-weight: 600;
  white-space: nowrap;
}

/* ==================== 摄影师信息 ==================== */
.photographer-info {
  overflow: hidden;
  margin-bottom: 24rpx;
}

.photographer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.photographer-title {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
}

.photographer-stats {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: #64748b;
}

.stat-icon {
  font-size: 24rpx;
}

.photographer-desc {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.6;
  clear: both;
}

/* ==================== 作品展示 ==================== */
.works-preview {
  margin: 24rpx 0;
  clear: both;
}

.works-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 16rpx;
}

.works-scroll {
  width: 100%;
  white-space: nowrap;
}

.works-list {
  display: inline-flex;
  gap: 12rpx;
}

.work-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* ==================== 价格 ==================== */
.photographer-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #e2e8f0;
}

.price-label {
  font-size: 26rpx;
  color: #64748b;
}

.price-value {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: 600;
}

.price-amount {
  font-size: 48rpx;
  color: #ef4444;
  font-weight: 700;
}

/* ==================== 空状态 ==================== */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #94a3b8;
}

/* ==================== 底部按钮 ==================== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
  z-index: 10;
}

.btn-secondary {
  flex: 1;
  height: 88rpx;
  background: #f1f5f9;
  color: #475569;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.btn-primary {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(26, 86, 219, 0.3);
}

.btn-primary[disabled] {
  background: #e2e8f0;
  color: #94a3b8;
  box-shadow: none;
}

