/* pages/apply/payment.wxss - 支付页面样式 */

.payment-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding-bottom: 160rpx;
}

/* 步骤进度条（复用前面的样式） */
.steps-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e2e8f0;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.step.active .step-number {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(26, 86, 219, 0.3);
}

.step.completed .step-number {
  background: #10b981;
  color: #ffffff;
}

.step-label {
  font-size: 22rpx;
  color: #94a3b8;
  white-space: nowrap;
}

.step.active .step-label {
  color: #1a56db;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: #e2e8f0;
  margin: 0 8rpx;
}

.step-line.active {
  background: linear-gradient(90deg, #1a56db 0%, #3b82f6 100%);
}

/* 订单信息 */
.order-section, .payment-section {
  margin: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e3a8a;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
}

.order-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item.highlight {
  background: linear-gradient(135deg, #e6f0ff 0%, #f0f5ff 100%);
  margin: 16rpx -32rpx -32rpx;
  padding: 24rpx 32rpx;
  border-radius: 0 0 24rpx 24rpx;
}

.item-label {
  font-size: 26rpx;
  color: #64748b;
}

.item-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.photographer-mini-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.item-value.price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #ef4444;
  font-weight: 600;
}

.price-amount {
  font-size: 44rpx;
  color: #ef4444;
  font-weight: 700;
}

/* 支付方式 */
.payment-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.payment-method {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s ease;
}

.payment-method.selected {
  border-color: #1a56db;
  box-shadow: 0 4rpx 16rpx rgba(26, 86, 219, 0.15);
}

.method-icon {
  font-size: 48rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 6rpx;
}

.method-desc {
  font-size: 22rpx;
  color: #94a3b8;
}

.method-check {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #1a56db;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
}

/* 提示框 */
.tip-box {
  margin: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #1a56db;
  display: flex;
  gap: 16rpx;
}

.tip-icon {
  font-size: 40rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e3a8a;
  margin-bottom: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #475569;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

/* 底部支付按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
  z-index: 10;
}

.total-price {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 26rpx;
  color: #64748b;
  margin-right: 8rpx;
}

.total-symbol {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: 600;
}

.total-amount {
  font-size: 52rpx;
  color: #ef4444;
  font-weight: 700;
}

.btn-pay {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.3);
}

