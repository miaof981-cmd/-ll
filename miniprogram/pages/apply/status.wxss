/* pages/apply/status.wxss - 申请状态样式 */

.status-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding-bottom: 140rpx;
}

.status-header {
  text-align: center;
  padding: 80rpx 32rpx 60rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
}

.status-header.status-completed {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
}

.status-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.status-title {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.status-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.info-section {
  margin: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e3a8a;
  margin-bottom: 20rpx;
}

.info-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #64748b;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
}

.photographer-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.photographer-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #e2e8f0;
}

.photographer-info {
  flex: 1;
}

.photographer-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.photographer-status {
  font-size: 24rpx;
  color: #64748b;
}

.timeline-section {
  margin: 32rpx;
}

.timeline {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.timeline-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 0;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 64rpx;
  bottom: -24rpx;
  width: 2rpx;
  background: #e2e8f0;
}

.timeline-item.completed::after {
  background: #10b981;
}

.timeline-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e2e8f0;
  flex-shrink: 0;
  position: relative;
  z-index: 1;
}

.timeline-item.completed .timeline-dot {
  background: #10b981;
}

.timeline-item.active .timeline-dot {
  background: #1a56db;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(26, 86, 219, 0.7);
  }
  50% {
    box-shadow: 0 0 0 10rpx rgba(26, 86, 219, 0);
  }
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: 22rpx;
  color: #94a3b8;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 16rpx;
  z-index: 10;
}

.btn-secondary {
  flex: 1;
  height: 88rpx;
  background: #f1f5f9;
  color: #475569;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
}

.btn-primary {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(26, 86, 219, 0.3);
}

