/* pages/apply/apply.wxss - 入学申请表单样式 */

/* 全局盒模型 - WXSS不支持通配符，需要单独设置 */
page {
  box-sizing: border-box;
}

.apply-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf1 100%);
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* ==================== 步骤进度条 ==================== */
.steps-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 0 0 auto;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e2e8f0;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.step.active .step-number {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(26, 86, 219, 0.3);
}

.step.completed .step-number {
  background: #10b981;
  color: #ffffff;
}

.step-label {
  font-size: 22rpx;
  color: #94a3b8;
  white-space: nowrap;
}

.step.active .step-label {
  color: #1a56db;
  font-weight: 600;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: #e2e8f0;
  margin: 0 8rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background: linear-gradient(90deg, #1a56db 0%, #3b82f6 100%);
}

/* ==================== 欢迎区域 ==================== */
.welcome-section {
  text-align: center;
  padding: 60rpx 32rpx 40rpx;
}

.welcome-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e3a8a;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #64748b;
}

/* ==================== 表单区域 ==================== */
.form-section {
  margin: 0 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.form-group-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #1e3a8a;
  margin: 40rpx 0 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e2e8f0;
}

.form-group-title:first-child {
  margin-top: 0;
}

.title-icon {
  font-size: 36rpx;
}

.form-item {
  margin-bottom: 32rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #ef4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.form-input:focus {
  background: #ffffff;
  border-color: #1a56db;
  box-shadow: 0 0 0 4rpx rgba(26, 86, 219, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx 24rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1e293b;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 22rpx;
  color: #94a3b8;
}

.upload-tip {
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

/* ==================== 单选框 ==================== */
.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #475569;
}

radio {
  transform: scale(1.1);
}

/* ==================== 照片上传（网格布局） ==================== */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 1:1 aspect ratio */
  border-radius: 16rpx;
  overflow: hidden;
}

.photo-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 2;
}

.upload-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 2rpx dashed #cbd5e1;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  border-radius: 16rpx;
}

.upload-item:active {
  background: #e2e8f0;
  border-color: #1a56db;
}

.upload-item .upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-item .upload-text {
  font-size: 20rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.upload-item .upload-count {
  font-size: 18rpx;
  color: #94a3b8;
}

/* ==================== 底部按钮 ==================== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(26, 86, 219, 0.3);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.btn-primary:active {
  box-shadow: 0 4rpx 12rpx rgba(26, 86, 219, 0.4);
  transform: translateY(2rpx);
}

