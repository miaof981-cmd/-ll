/* pages/activity/apply.wxss */
.apply-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 180rpx;
}

/* ==================== 活动信息卡片 ==================== */
.activity-info-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.activity-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  border: 3rpx solid rgba(255,255,255,0.3);
}

.activity-info {
  flex: 1;
  color: white;
}

.activity-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.activity-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
}

/* ==================== 表单区域 ==================== */
.form-section {
  background: white;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 32rpx;
}

.header-icon {
  font-size: 36rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

/* ==================== 表单组件 ==================== */
.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 24rpx;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-textarea {
  min-height: 180rpx;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #1a56db;
  background: white;
}

/* ==================== 单选按钮 ==================== */
.radio-group {
  display: flex;
  gap: 48rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
}

/* ==================== 图片上传 ==================== */
.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-btn:active {
  background: #f0f0f0;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 12rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.photo-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.4);
}

/* ==================== 摄影师选择 ==================== */
.photographers-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.photographer-card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  background: white;
  transition: all 0.3s ease;
}

.photographer-card.selected {
  border-color: #1a56db;
  background: linear-gradient(135deg, rgba(26, 86, 219, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
}

.photographer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
  border: 3rpx solid #f0f0f0;
}

.photographer-card.selected .photographer-avatar {
  border-color: #1a56db;
}

.photographer-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.photographer-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.rating-star {
  font-size: 24rpx;
}

.rating-value {
  font-size: 24rpx;
  color: #faad14;
  font-weight: 600;
}

.selected-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  background: #1a56db;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* ==================== 底部按钮 ==================== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.bottom-bar .price-label {
  font-size: 26rpx;
  color: #666;
}

.bottom-bar .price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #ff4d4f;
}

.btn-submit {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(26, 86, 219, 0.4);
}

.btn-submit:active {
  opacity: 0.9;
  transform: scale(0.98);
}

