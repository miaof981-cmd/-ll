.apply-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 活动头部 */
.activity-header {
  background: white;
  padding: 32rpx;
  display: flex;
  gap: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.activity-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #f59e0b;
}

/* 通用卡片 */
.section-card {
  background: white;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 空状态 - 没有孩子 */
.empty-children {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  display: block;
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.add-child-btn {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 孩子列表 */
.children-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.child-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.child-item.selected {
  background: #f0f7ff;
  border-color: #667eea;
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.child-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.child-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.child-detail {
  font-size: 24rpx;
  color: #999;
}

.check-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #667eea;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* 生活照 */
.photo-hint {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.life-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.photo-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.delete-photo-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ef4444;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.add-photo-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #f9fafb;
}

.add-icon {
  font-size: 64rpx;
  color: #9ca3af;
  font-weight: 300;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #6b7280;
}

/* 备注 */
.remark-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 摄影师列表 */
.photographers-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.photographer-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.photographer-item.selected {
  background: #f0f7ff;
  border-color: #667eea;
}

.photographer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.photographer-avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.photographer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.photographer-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.photographer-specialty {
  font-size: 24rpx;
  color: #667eea;
  background: #f0f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  width: fit-content;
}

.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #f59e0b;
}

.submit-btn {
  padding: 0 48rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}
