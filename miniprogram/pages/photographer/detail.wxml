<view class="photographer-detail-page">
  <!-- 浮动返回按钮 -->
  <view wx:if="{{!canGoBack}}" class="float-back-btn" bindtap="goBack">
    <text class="back-icon">←</text>
  </view>

  <view wx:if="{{loading}}" class="loading">加载中...</view>

  <view wx:else class="photographer-container">
    <!-- 摄影师头部信息 -->
    <view class="photographer-header">
      <image wx:if="{{photographer.avatar}}" class="photographer-avatar-large" src="{{photographer.avatar}}" mode="aspectFill"></image>
      <view wx:else class="photographer-avatar-large placeholder">{{photographer.name.substring(0,1)}}</view>
      <view class="photographer-info">
        <text class="photographer-name">{{photographer.name}}</text>
        <text class="photographer-specialty">{{photographer.specialty || '专业摄影师'}}</text>
        <view wx:if="{{photographer.description}}" class="photographer-desc">{{photographer.description}}</view>
      </view>
    </view>

    <!-- 统计信息 -->
    <view class="stats-card">
      <view class="stat-item">
        <text class="stat-value">{{photographer.orderCount || 0}}</text>
        <text class="stat-label">接单数</text>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-item">
        <text class="stat-value">{{photographer.referenceImages ? photographer.referenceImages.length : 0}}</text>
        <text class="stat-label">作品数</text>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-item">
        <text class="stat-value">{{photographer.status === 'available' ? '可接单' : '休息中'}}</text>
        <text class="stat-label">状态</text>
      </view>
    </view>

    <!-- 参考作品 -->
    <view wx:if="{{photographer.referenceImages && photographer.referenceImages.length > 0}}" class="section-card">
      <view class="section-title">📸 参考作品</view>
      <view class="works-grid">
        <image
          wx:for="{{photographer.referenceImages}}"
          wx:key="index"
          class="work-item"
          src="{{item}}"
          mode="aspectFill"
          bindtap="previewWork"
          data-index="{{index}}"
        ></image>
      </view>
    </view>

    <!-- 暂无作品提示 -->
    <view wx:else class="section-card">
      <view class="section-title">📸 参考作品</view>
      <view class="no-data">暂无作品</view>
    </view>
  </view>
</view>

