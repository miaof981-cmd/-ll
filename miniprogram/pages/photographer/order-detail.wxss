/* pages/photographer/order-detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.content {
  padding: 24rpx;
}

/* 卡片通用样式 */
.order-info-card,
.student-card,
.reference-card,
.remark-card,
.uploaded-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-header .subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 订单状态 */
.order-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.order-status.in_progress {
  background: #dbeafe;
  color: #3b82f6;
}

.order-status.pending_confirm {
  background: #fef3c7;
  color: #f59e0b;
}

.order-status.completed {
  background: #d1fae5;
  color: #10b981;
}

/* 信息行 */
.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row .label {
  color: #999;
  width: 160rpx;
  flex-shrink: 0;
}

.info-row .value {
  flex: 1;
  color: #333;
  word-break: break-all;
}

/* 学生信息 */
.student-details {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  width: calc(50% - 12rpx);
  font-size: 28rpx;
}

.detail-item .label {
  color: #999;
  margin-right: 8rpx;
}

.detail-item .value {
  color: #333;
  font-weight: 500;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

/* 参考照片空状态 */
.empty-reference {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 16rpx;
}

.empty-reference .empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-reference .empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-reference .empty-hint {
  font-size: 24rpx;
  color: #999;
}

/* 备注信息 */
.remark-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

/* 上传区域 */
.upload-area {
  min-height: 200rpx;
}

/* 历史提交卡片 */
.history-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #ff4d4f;
}

.reject-badge {
  background: #ff4d4f;
  color: white;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.reject-reason {
  background: #fff1f0;
  border-left: 4rpx solid #ff4d4f;
  padding: 16rpx;
  margin: 16rpx 0;
  border-radius: 8rpx;
}

.reason-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.reason-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  line-height: 1.6;
}

.upload-item.history {
  position: relative;
  opacity: 0.7;
}

.history-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 77, 79, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.upload-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 1:1 比例 */
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.upload-item .photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 48rpx;
  height: 48rpx;
  background: #ef4444;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(239, 68, 68, 0.3);
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background: #f5f5f5;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #e5e7eb;
}

.upload-icon {
  font-size: 64rpx;
  color: #9ca3af;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #9ca3af;
}

.empty-upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #bbb;
}

/* 摄影师备注区域 */
.photographer-note-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #e0e0e0;
}

.note-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.note-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.note-hint {
  font-size: 24rpx;
  color: #999;
}

.note-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.note-counter {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 28rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.primary[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.status-tip {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx 0;
  background: #fef3c7;
  border-radius: 16rpx;
}

.status-tip.success {
  background: #d1fae5;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.tip-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

/* 完整历史记录卡片 */
.full-history-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-count {
  font-size: 24rpx;
  color: #999;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 时间线样式 */
.timeline {
  position: relative;
  padding-left: 48rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 16rpx;
  bottom: 16rpx;
  width: 2rpx;
  background: linear-gradient(to bottom, #e5e7eb 0%, #e5e7eb 50%, transparent 100%);
}

.timeline-item {
  position: relative;
  margin-bottom: 32rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -42rpx;
  top: 4rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  box-shadow: 0 0 0 2rpx #e5e7eb;
  z-index: 1;
}

.timeline-dot.submit {
  background: #10b981;
  box-shadow: 0 0 0 2rpx #10b981;
}

.timeline-dot.admin-reject {
  background: #ff4d4f;
  box-shadow: 0 0 0 2rpx #ff4d4f;
  animation: pulse 2s ease-in-out infinite;
}

.timeline-dot.user-reject {
  background: #ff9800;
  box-shadow: 0 0 0 2rpx #ff9800;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.15);
    opacity: 0.8;
  }
}

.timeline-content {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 20rpx;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.timeline-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.timeline-time {
  font-size: 22rpx;
  color: #999;
}

.timeline-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.timeline-reject {
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  border-left: 4rpx solid #ff4d4f;
  background: #fff1f0;
}

.admin-reject-bg {
  background: #fff1f0 !important;
  border-left-color: #ff4d4f !important;
}

.user-reject-bg {
  background: #fff7e6 !important;
  border-left-color: #ff9800 !important;
}

/* 时间线中的历史照片 */
.timeline-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.timeline-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}

