.photographer-detail-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

/* 摄影师头部 */
.photographer-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.photographer-avatar-large {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
}

.photographer-avatar-large.placeholder {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  font-weight: 600;
}

.photographer-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.photographer-name {
  font-size: 40rpx;
  font-weight: 600;
  color: white;
}

.photographer-specialty {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.photographer-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.6;
  margin-top: 8rpx;
  max-width: 600rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  margin: -40rpx 24rpx 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 通用卡片 */
.section-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 0 24rpx 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 作品网格 */
.works-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.work-item {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 24rpx;
}

