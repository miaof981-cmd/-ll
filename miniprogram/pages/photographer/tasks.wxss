/* pages/photographer/tasks.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 摄影师信息卡片 */
.photographer-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.photographer-card .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.photographer-card .info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.photographer-card .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.photographer-card .specialty {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计卡片 */
.stats-container {
  display: flex;
  background: #fff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-item.urgent .stat-value {
  color: #ef4444;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-value.processing {
  color: #f59e0b;
}

.stat-value.completed {
  color: #10b981;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  padding: 24rpx;
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  gap: 16rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

/* 订单容器 */
.orders-container {
  padding: 0 24rpx;
}

.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 订单列表 */
.orders-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  overflow: hidden;
}

.order-card.urgent {
  border-left: 6rpx solid #ef4444;
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 紧急标签 */
.urgent-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.header-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.activity-name {
  font-size: 24rpx;
  color: #999;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.time-text {
  font-size: 24rpx;
  color: #666;
}

/* 订单状态行 */
.order-status-row {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-item.success .status-text {
  color: #10b981;
}

.status-icon {
  font-size: 28rpx;
}

.status-text {
  font-size: 26rpx;
  color: #666;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: flex-end;
}

.action-hint {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: translateX(-50%) scale(0.95);
}

