/* pages/photographer/tasks.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 摄影师信息卡片 */
.photographer-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.photographer-card .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.photographer-card .avatar-placeholder {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  font-weight: 600;
}

.photographer-card .info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.photographer-card .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.photographer-card .specialty {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 统计卡片 */
.stats-container {
  display: flex;
  background: #fff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.stat-item.urgent .stat-value {
  color: #ef4444;
}

.stat-item.warning .stat-value {
  color: #ff9800;
}

.stat-item.review .stat-value {
  color: #ec4899;
}

.stat-item.confirm .stat-value {
  color: #3b82f6;
}

.stat-item.success .stat-value {
  color: #10b981;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-value.processing {
  color: #f59e0b;
}

.stat-value.completed {
  color: #10b981;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  flex-wrap: nowrap; /* 不换行，保持一行 */
  padding: 24rpx;
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  gap: 8rpx; /* 更小的间距 */
  overflow-x: auto; /* 如果内容过长，允许横向滚动 */
}

.filter-tab {
  flex: 1; /* 平均分配空间 */
  min-width: 0; /* 允许缩小 */
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  white-space: nowrap; /* 不换行 */
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

/* 订单容器 */
.orders-container {
  padding: 0 24rpx;
}

.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 订单列表 */
.orders-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 订单头部 - 状态徽章 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
}

.status-badge.urgent {
  background: #ef4444;
}

.status-badge.admin-reject {
  background: #dc2626;
}

.status-badge.user-reject {
  background: #f59e0b;
}

.status-badge.review {
  background: #ec4899;
}

.status-badge.confirm {
  background: #3b82f6;
}

.status-badge.success {
  background: #10b981;
}

.urgent-badge {
  font-size: 22rpx;
  color: #ef4444;
  font-weight: 600;
}

/* 活动信息区 */
.activity-section {
  display: flex;
  gap: 16rpx;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.activity-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.activity-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ef4444;
}

/* 学生信息 */
.student-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.student-info .label {
  color: #999;
}

.student-info .value {
  color: #333;
  font-weight: 600;
}

.student-info .order-no {
  margin-left: auto;
  color: #999;
  font-size: 22rpx;
}

/* 拒绝原因区域 */
.reject-section {
  padding: 16rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
}

/* 管理员驳回样式 */
.reject-section.admin-reject {
  background: #fee;
  border-left: 4rpx solid #dc2626;
}

.reject-section.admin-reject .reject-title {
  color: #dc2626;
}

/* 用户拒绝样式 */
.reject-section.user-reject {
  background: #fef3c7;
  border-left: 4rpx solid #f59e0b;
}

.reject-section.user-reject .reject-title {
  color: #f59e0b;
}

.reject-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.reject-icon {
  font-size: 28rpx;
}

.reject-title {
  font-size: 26rpx;
  font-weight: 600;
}

.reject-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 22rpx;
  color: #999;
}

.reject-time {
  flex: 1;
}

.reject-count {
  color: #ef4444;
  font-weight: 600;
}

.reject-reason {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 12rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 6rpx;
}

.reject-tip {
  font-size: 22rpx;
  color: #666;
  font-style: italic;
}

/* 作品上传状态 */
.photo-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.photo-icon {
  font-size: 28rpx;
}

.photo-text {
  font-size: 26rpx;
  color: #666;
}

/* 时间信息 */
.time-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.time-label {
  color: #999;
}

.time-value {
  color: #666;
}

/* 操作提示 */
.action-hint {
  text-align: right;
  font-size: 24rpx;
  color: #1890ff;
  margin-top: 8rpx;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.header-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.activity-name {
  font-size: 24rpx;
  color: #999;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.time-text {
  font-size: 24rpx;
  color: #666;
}

/* 订单状态行 */
.order-status-row {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-item.success .status-text {
  color: #10b981;
}

.status-icon {
  font-size: 28rpx;
}

.status-text {
  font-size: 26rpx;
  color: #666;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: flex-end;
}

.action-hint {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: translateX(-50%) scale(0.95);
}

