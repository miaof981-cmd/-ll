/* pages/login/login.wxss - 统一登录页面（保留原设计风格） */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* ==================== 顶部装饰圆圈 ==================== */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -150rpx;
  left: -80rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 40%;
  left: -60rpx;
  animation: float 7s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-30rpx) rotate(10deg);
  }
}

/* ==================== 登录卡片 ==================== */
.login-card {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  padding: 64rpx 48rpx;
  animation: slideUp 0.5s ease-out;
  position: relative;
  z-index: 1;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== Logo 和标题（漂浮博士帽） ==================== */
.login-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.logo-large {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  display: inline-block;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.login-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.login-subtitle {
  display: block;
  font-size: 26rpx;
  color: #64748b;
}

/* ==================== 登录区域 ==================== */
.login-section {
  margin-bottom: 32rpx;
}

.btn-wechat-login {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ae56 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 24px rgba(7, 193, 96, 0.3);
  border: none;
  transition: all 0.3s;
}

.btn-wechat-login::after {
  border: none;
}

.btn-wechat-login:active {
  transform: scale(0.98);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.wechat-icon {
  font-size: 48rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.login-desc {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 24rpx;
}

.desc-icon {
  font-size: 28rpx;
}

.desc-text {
  font-size: 24rpx;
  color: #64748b;
}

/* ==================== 分隔线 ==================== */
.divider-section {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1px;
  background: #e2e8f0;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #94a3b8;
}

/* ==================== 快捷入口 ==================== */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-card {
  flex: 1;
  padding: 32rpx 20rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.action-card:active {
  background: #f1f5f9;
  transform: scale(0.95);
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 4rpx;
}

.action-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
}

.action-desc {
  font-size: 22rpx;
  color: #94a3b8;
}

/* ==================== 提示信息 ==================== */
.hint-box {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 20rpx;
  padding: 24rpx;
}

.hint-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.hint-icon {
  font-size: 28rpx;
}

.hint-title text:last-child {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
}

.hint-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hint-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.hint-icon-small {
  font-size: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.5;
}

/* ==================== 底部文字 ==================== */
.footer-text {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  z-index: 1;
}
