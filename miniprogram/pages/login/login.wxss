/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
  color: white;
}

.logo {
  margin-bottom: 30rpx;
}

.logo-text {
  font-size: 120rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 登录类型切换 */
.login-type-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 42rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: white;
  color: #333;
  font-weight: bold;
}

/* 登录表单 */
.login-form {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-group:focus-within {
  border-color: #1f6feb;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(31, 111, 235, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #666;
}

.form-input {
  flex: 1;
  padding: 32rpx 0;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

.form-actions {
  margin: 60rpx 0 40rpx;
}

.login-btn {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 16rpx;
}

.form-footer {
  text-align: center;
}

.forgot-link {
  color: #1f6feb;
  font-size: 26rpx;
}

/* 演示账号 */
.demo-accounts {
  margin-top: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
}

.demo-title {
  color: white;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.demo-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.demo-label {
  font-weight: bold;
}

.demo-value {
  font-family: 'Courier New', monospace;
}
