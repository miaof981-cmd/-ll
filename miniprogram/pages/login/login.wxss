/* pages/login/login.wxss - 现代学校官网登录页 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx var(--spacing-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* ==================== 顶部装饰 ==================== */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -200rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -150rpx;
  left: -80rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 40%;
  left: -60rpx;
}

/* ==================== 登录卡片 ==================== */
.login-card {
  width: 100%;
  max-width: 600rpx;
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  padding: var(--spacing-xl);
  animation: slideUp 0.5s ease-out;
  position: relative;
  z-index: 1;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ==================== 登录头部 ==================== */
.login-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.logo-large {
  font-size: 88rpx;
  margin-bottom: 16rpx;
  display: inline-block;
  animation: bounce 1s ease-in-out infinite alternate;
}

@keyframes bounce {
  to {
    transform: translateY(-10rpx);
  }
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-dark);
  margin-bottom: 12rpx;
}

.login-subtitle {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* ==================== 类型切换 ==================== */
.type-tabs {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: var(--spacing-xl);
  background: var(--bg-tertiary);
  padding: 8rpx;
  border-radius: var(--radius-md);
}

.type-tab {
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  transition: all 0.3s ease;
}

.type-tab.active {
  background: var(--primary-color);
  color: var(--text-white);
  box-shadow: var(--shadow-md);
  transform: scale(1.02);
}

/* ==================== 表单 ==================== */
.login-form {
  margin-bottom: var(--spacing-lg);
}

.form-group {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.label-icon {
  font-size: 32rpx;
}

.input-wrapper {
  background: var(--bg-secondary);
  border: 3rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 28rpx 32rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: var(--primary-color);
  background: var(--bg-primary);
  box-shadow: 0 0 0 6rpx rgba(26, 86, 219, 0.1);
}

.input-field {
  width: 100%;
  font-size: 28rpx;
  color: var(--text-primary);
}

.input-placeholder {
  color: var(--text-tertiary);
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: var(--spacing-lg);
}

.forgot-link {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.forgot-link:active {
  opacity: 0.7;
}

/* ==================== 登录按钮 ==================== */
.btn-login {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--text-white);
  border-radius: var(--radius-md);
  font-size: 32rpx;
  font-weight: 600;
  padding: 32rpx;
  border: none;
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
}

.btn-login:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-xl);
}

/* ==================== 申请入学链接 ==================== */
.register-link {
  text-align: center;
  margin-top: 32rpx;
  padding: 24rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.link-text {
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 8rpx;
  transition: all 0.3s ease;
}

.register-link:active .link-text {
  color: var(--primary-dark);
  text-decoration: underline;
}

.btn-login::after {
  border: none;
}

/* ==================== 提示信息 ==================== */
.hint-box {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.hint-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #92400e;
  margin-bottom: 12rpx;
}

.hint-icon {
  font-size: 28rpx;
}

.hint-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hint-item {
  font-size: 24rpx;
  color: #78350f;
  display: flex;
  align-items: center;
}

.hint-label {
  font-weight: 500;
  margin-right: 8rpx;
}

.hint-value {
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  color: #1f6feb;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.hint-divider {
  height: 1px;
  background: rgba(255, 255, 255, 0.3);
  margin: 12rpx 0;
}

/* ==================== 底部文字 ==================== */
.footer-text {
  margin-top: var(--spacing-xl);
  text-align: center;
}

.footer-text text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
