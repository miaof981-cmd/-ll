/* pages/login/login.wxss - 统一登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding-bottom: 40rpx;
}

/* ==================== 顶部装饰 ==================== */
.header-wave {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  opacity: 0.3;
}

.wave-img {
  width: 100%;
}

/* ==================== Logo 区域 ==================== */
.logo-section {
  margin-top: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.logo-circle {
  width: 180rpx;
  height: 180rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 32rpx;
}

.logo-img {
  width: 120rpx;
  height: 120rpx;
}

.school-name {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 登录区域 ==================== */
.login-section {
  width: 100%;
  padding: 80rpx 48rpx 40rpx;
  z-index: 1;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: none;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
}

.login-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
}

.login-btn.primary::after {
  border: none;
}

/* ==================== 分隔线 ==================== */
.divider {
  display: flex;
  align-items: center;
  margin: 48rpx 0;
}

.line {
  flex: 1;
  height: 1px;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  padding: 0 24rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* ==================== 快捷操作 ==================== */
.quick-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.action-item {
  flex: 1;
  padding: 32rpx 0;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  backdrop-filter: blur(10px);
}

.action-icon {
  font-size: 56rpx;
}

.action-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

/* ==================== 说明区域 ==================== */
.info-section {
  width: 100%;
  padding: 40rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.info-icon {
  font-size: 32rpx;
}

.info-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ==================== 底部提示 ==================== */
.footer-tip {
  margin-top: auto;
  padding: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
