<!--pages/login/login.wxml - 统一登录页面-->
<view class="login-container">
  <!-- 顶部装饰 -->
  <view class="header-wave">
    <image class="wave-img" src="/images/wave-bg.png" mode="widthFix"></image>
  </view>

  <!-- Logo 和标题 -->
  <view class="logo-section">
    <view class="logo-circle">
      <image class="logo-img" src="/images/school-logo.png" mode="aspectFit"></image>
    </view>
    <text class="school-name">学校官网小程序</text>
    <text class="welcome-text">欢迎登录</text>
  </view>

  <!-- 登录按钮区域 -->
  <view class="login-section">
    <button 
      class="login-btn primary"
      bindtap="wechatLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      <view class="btn-content">
        <image class="wechat-icon" src="/images/wechat-icon.png" mode="aspectFit"></image>
        <text>微信一键登录</text>
      </view>
    </button>

    <view class="divider">
      <view class="line"></view>
      <text class="divider-text">或</text>
      <view class="line"></view>
    </view>

    <view class="quick-actions">
      <view class="action-item" bindtap="guestMode">
        <view class="action-icon">👁️</view>
        <text class="action-text">游客浏览</text>
      </view>
      <view class="action-item" bindtap="goToApply">
        <view class="action-icon">📝</view>
        <text class="action-text">申请入学</text>
      </view>
    </view>
  </view>

  <!-- 说明文字 -->
  <view class="info-section">
    <view class="info-item">
      <view class="info-icon">✅</view>
      <text class="info-text">家长自动识别，查看孩子档案</text>
    </view>
    <view class="info-item">
      <view class="info-icon">✅</view>
      <text class="info-text">管理员自动识别，直达后台</text>
    </view>
    <view class="info-item">
      <view class="info-icon">✅</view>
      <text class="info-text">多角色支持，一键切换</text>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="footer-tip">
    <text class="tip-text">首次登录将自动创建账号</text>
  </view>
</view>
