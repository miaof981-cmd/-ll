/* pages/admin/banners/banners.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-secondary);
  padding: var(--spacing-lg);
}

/* ==================== 添加按钮 - 紧凑版 ==================== */
.add-section-compact {
  margin-bottom: var(--spacing-lg);
}

.btn-add-compact {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--text-white);
  border-radius: var(--radius-md);
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  border: none;
  box-shadow: var(--shadow-md);
}

.btn-add-compact::after {
  border: none;
}

.add-icon-small {
  font-size: 32rpx;
}

.btn-add-compact text {
  font-size: 28rpx;
  font-weight: 500;
}

/* ==================== 轮播图列表 ==================== */
.banner-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.banner-item {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
}

.banner-preview {
  width: 100%;
  display: block;
}

.banner-info {
  padding: var(--spacing-md) var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
}

.banner-date {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.banner-actions {
  padding: var(--spacing-md) var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
  display: flex;
  gap: 16rpx;
}

.btn-delete {
  flex: 1;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: var(--text-white);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

.btn-delete::after {
  border: none;
}

/* ==================== 空状态 ==================== */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: var(--text-tertiary);
}
