/* pages/admin/admins/admins.wxss */
.admins-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* ==================== 顶部栏 ==================== */
.top-bar {
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  flex-wrap: nowrap;
}

.search-box {
  flex: 1;
  position: relative;
  min-width: 0;
}

.search-input {
  width: 100%;
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 48rpx 0 24rpx;
  font-size: 26rpx;
}

.search-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.add-icon {
  font-size: 40rpx;
  font-weight: 300;
  line-height: 1;
}

/* ==================== 筛选标签 ==================== */
.filter-tabs {
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* ==================== 管理员列表 ==================== */
.admin-list {
  padding: 24rpx 32rpx;
}

.empty-tip {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.admin-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.admin-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.admin-info {
  flex: 1;
}

.admin-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  font-weight: 500;
}

.status-badge.active {
  background: #d1fae5;
  color: #059669;
}

.status-badge.inactive {
  background: #fee2e2;
  color: #dc2626;
}

.admin-contact {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.contact-item {
  font-size: 26rpx;
  color: #666;
}

.admin-openid {
  font-size: 22rpx;
  color: #999;
  font-family: 'Monaco', 'Courier New', monospace;
  word-break: break-all;
  background: #f5f5f5;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.admin-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

/* ==================== 操作按钮 ==================== */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-action {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  padding: 0;
}

.btn-edit {
  background: #3b82f6;
  color: white;
}

.btn-enable {
  background: #10b981;
  color: white;
}

.btn-disable {
  background: #f59e0b;
  color: white;
}

.btn-delete {
  background: #ef4444;
  color: white;
}

