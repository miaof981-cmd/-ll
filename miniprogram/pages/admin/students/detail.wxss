.profile { background: #fff; padding: 20rpx; margin: 20rpx; border-radius: 12rpx; display: flex; align-items: center; }
.avatar { font-size: 64rpx; margin-right: 20rpx; }
.info { flex: 1; }
.name { font-size: 30rpx; font-weight: bold; }
.id { font-size: 24rpx; color: #666; }
.waterfall { display: flex; gap: 20rpx; padding: 0 20rpx 20rpx; }
.column { flex: 1; display: flex; flex-direction: column; gap: 20rpx; }
.card { background: #fff; padding: 20rpx; border-radius: 12rpx; }
.card-image { width: 100%; border-radius: 8rpx; background: #f3f4f6; margin: 8rpx 0; }
.title { font-weight: 600; margin-bottom: 8rpx; }
.content { color: #6b7280; }

