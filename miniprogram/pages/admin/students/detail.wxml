<view class="container">
  <view class="profile" wx:if="{{student}}">
    <view class="avatar">👤</view>
    <view class="info">
      <view class="name">{{student.name}}</view>
      <view class="id">学号：{{student.studentId}}</view>
    </view>
  </view>

  <view class="waterfall">
    <view class="column">
      <view wx:for="{{leftColumn}}" wx:key="_id" class="card">
        <view class="title">{{item.title}}</view>
        <image wx:if="{{item.type==='image' && item.url}}" class="card-image" src="{{item.url}}" mode="widthFix" bindtap="preview" data-url="{{item.url}}" />
        <view class="content" wx:if="{{item.content}}">{{item.content}}</view>
      </view>
    </view>
    <view class="column">
      <view wx:for="{{rightColumn}}" wx:key="_id" class="card">
        <view class="title">{{item.title}}</view>
        <image wx:if="{{item.type==='image' && item.url}}" class="card-image" src="{{item.url}}" mode="widthFix" bindtap="preview" data-url="{{item.url}}" />
        <view class="content" wx:if="{{item.content}}">{{item.content}}</view>
      </view>
    </view>
  </view>
</view>

