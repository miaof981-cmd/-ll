.toolbar { display: flex; gap: 12rpx; padding: 20rpx; }
.search { flex: 1; border: 1rpx solid #e5e7eb; padding: 16rpx; border-radius: 8rpx; }
.table { margin: 0 20rpx; background: #fff; border-radius: 12rpx; overflow: hidden; }
.thead, .tr { display: grid; grid-template-columns: 2fr 2fr 3fr; align-items: center; }
.thead { background: #f3f4f6; padding: 16rpx 20rpx; font-weight: 600; color: #374151; }
.tr { padding: 16rpx 20rpx; border-top: 1rpx solid #f0f0f0; }
.td.ops, .th.ops { display: flex; gap: 12rpx; align-items: center; }
.pager { padding: 16rpx 20rpx; display: flex; justify-content: center; gap: 16rpx; color: #6b7280; }

