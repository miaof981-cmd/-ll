.form { background: #fff; padding: 20rpx; margin: 20rpx; border-radius: 12rpx; }
.input { border: 1rpx solid #e5e7eb; padding: 16rpx; border-radius: 8rpx; margin-bottom: 12rpx; }
.textarea { border: 1rpx solid #e5e7eb; padding: 16rpx; border-radius: 8rpx; min-height: 160rpx; margin-bottom: 12rpx; }
.list { margin: 20rpx; }
.item { background: #fff; padding: 20rpx; border-radius: 12rpx; margin-bottom: 16rpx; }
.item-title { font-weight: 600; margin-bottom: 8rpx; }
.tag { color: #b45309; background: #fffbeb; padding: 2rpx 8rpx; border-radius: 6rpx; margin-left: 8rpx; }
.item-content { color: #6b7280; margin-bottom: 12rpx; }
.item-actions { display: flex; gap: 12rpx; }
.image-row { display: flex; gap: 12rpx; align-items: center; margin-bottom: 12rpx; }
.hint { color: #9ca3af; font-size: 22rpx; }

