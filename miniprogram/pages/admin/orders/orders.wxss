/* 页面容器 */
.orders-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部栏 */
.top-bar {
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.order-count {
  font-size: 26rpx;
  color: #999;
}

/* 状态筛选 */
.status-filter {
  background: white;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 16rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
  flex-shrink: 0;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
}

/* 订单列表 */
.orders-list {
  padding: 24rpx 32rpx;
}

.loading-tip,
.empty-tip {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
}

/* 订单卡片 */
.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-number {
  font-size: 24rpx;
  color: #999;
  font-family: 'Monaco', 'Courier New', monospace;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

/* 订单内容 */
.order-content {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.activity-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-name {
  font-size: 24rpx;
  color: #666;
}

.order-time {
  font-size: 22rpx;
  color: #999;
}

.order-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #f59e0b;
  align-self: center;
}

/* 订单操作 */
.order-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  padding: 12rpx 0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
}

.action-start {
  background: #8b5cf6;
}

.action-complete {
  background: #10b981;
}

.action-refund {
  background: #ef4444;
}

.action-reject {
  background: #6b7280;
}

.action-cancel {
  background: #9ca3af;
}

