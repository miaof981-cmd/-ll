<view class="container">
  <view class="header">
    <text class="title">摄影师管理</text>
    <button class="btn-add" bindtap="addPhotographer">+ 添加摄影师</button>
  </view>

  <view class="photographers-list">
    <view class="photographer-card" wx:for="{{photographers}}" wx:key="_id">
      <view class="card-header">
        <image class="avatar" src="{{item.avatar}}" mode="aspectFill" wx:if="{{item.avatar}}"></image>
        <view class="avatar-placeholder" wx:else>{{item.name.substring(0,1)}}</view>
        <view class="info">
          <text class="name">{{item.name}}</text>
          <text class="specialty">{{item.specialty}}</text>
        </view>
      </view>
      <view class="card-body">
        <text class="description">{{item.description}}</text>
      </view>
      <view class="card-footer">
        <text class="orders">订单数: {{item.orderCount || 0}}</text>
        <view class="actions">
          <button class="btn-edit" size="mini" bindtap="editPhotographer" data-id="{{item._id}}">编辑</button>
          <button class="btn-delete" size="mini" bindtap="deletePhotographer" data-id="{{item._id}}">删除</button>
        </view>
      </view>
    </view>
  </view>

  <view class="empty" wx:if="{{photographers.length === 0}}">
    <text>暂无摄影师</text>
  </view>
</view>
