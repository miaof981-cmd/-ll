/* 页面容器 */
.photographers-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部栏 */
.top-bar {
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 28rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* 摄影师列表 */
.photographers-list {
  padding: 24rpx 32rpx;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 摄影师卡片 */
.photographer-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-main {
  margin-bottom: 24rpx;
}

/* 摄影师信息 */
.photographer-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: 600;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.photographer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.specialty {
  font-size: 26rpx;
  color: #667eea;
  background: #f0f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  width: fit-content;
}

.specialty-empty {
  font-size: 26rpx;
  color: #999;
}

/* 简介 */
.description {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.description text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 统计信息 */
.stats-row {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.stat-value.success {
  color: #10b981;
  font-size: 32rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-action {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  padding: 0;
}

.btn-edit {
  background: #3b82f6;
  color: white;
}

.btn-delete {
  background: #ef4444;
  color: white;
}

/* 参考作品预览 */
.reference-preview {
  margin-bottom: 16rpx;
}

.ref-title {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.ref-scroll {
  width: 100%;
  white-space: nowrap;
}

.ref-images-list {
  display: inline-flex;
  gap: 12rpx;
}

.ref-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}
