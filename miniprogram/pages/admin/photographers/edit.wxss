.container {
  padding: var(--spacing-lg);
  background: var(--bg-secondary);
  min-height: 100vh;
}

.form {
  background: white;
  border-radius: var(--border-radius);
  padding: var(--spacing-lg);
}

.form-item {
  margin-bottom: var(--spacing-lg);
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.label-with-help {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: var(--spacing-sm);
}

.help-icon {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50%;
  font-size: 20rpx;
}

.hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.input, .textarea {
  width: 100%;
  padding: var(--spacing-md);
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  min-height: 200rpx;
}

.image-upload {
  display: flex;
  gap: var(--spacing-md);
}

.preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--border-radius);
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: var(--text-tertiary);
  background: var(--bg-secondary);
}

.form-actions {
  display: flex;
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
}

.btn-cancel, .btn-save {
  flex: 1;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  font-size: 30rpx;
}

.btn-cancel {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.btn-save {
  background: var(--primary-color);
  color: white;
}

/* 帮助弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
}

.modal-body {
  padding: 32rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.step-item:last-of-type {
  margin-bottom: 0;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.step-text {
  flex: 1;
  padding-top: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.step-note {
  margin-top: 24rpx;
  padding: 16rpx;
  background: #f0f7ff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #1a56db;
  line-height: 1.6;
}

.modal-btn {
  width: calc(100% - 64rpx);
  margin: 0 32rpx 32rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

