.container {
  padding: var(--spacing-lg);
  background: var(--bg-secondary);
  min-height: 100vh;
}

.form {
  background: white;
  border-radius: var(--border-radius);
  padding: var(--spacing-lg);
}

.form-item {
  margin-bottom: var(--spacing-lg);
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.input, .textarea {
  width: 100%;
  padding: var(--spacing-md);
  border: 2rpx solid var(--border-color);
  border-radius: var(--border-radius);
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  min-height: 200rpx;
}

.image-upload {
  display: flex;
  gap: var(--spacing-md);
}

.preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--border-radius);
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: var(--border-radius);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: var(--text-tertiary);
  background: var(--bg-secondary);
}

.form-actions {
  display: flex;
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
}

.btn-cancel, .btn-save {
  flex: 1;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  font-size: 30rpx;
}

.btn-cancel {
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.btn-save {
  background: var(--primary-color);
  color: white;
}

