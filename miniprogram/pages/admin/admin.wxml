<!--pages/admin/admin.wxml-->
<view class="container">
  <!-- 管理员信息 -->
  <view class="admin-info" wx:if="{{adminInfo}}">
    <view class="admin-avatar">⚙️</view>
    <view class="admin-details">
      <view class="admin-name">{{adminInfo.name}}</view>
      <view class="admin-role">系统管理员</view>
    </view>
    <button class="logout-btn" bindtap="logout" size="mini">退出</button>
  </view>

  <!-- 统计数据 -->
  <view class="stats-section">
    <view class="stats-title">数据概览</view>
    <view class="stats-grid">
      <view class="stat-item">
        <view class="stat-number">{{stats.totalStudents}}</view>
        <view class="stat-label">学生总数</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.totalAnnouncements}}</view>
        <view class="stat-label">公告数量</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.totalArticles}}</view>
        <view class="stat-label">文章数量</view>
      </view>
    </view>
  </view>

  <!-- 管理功能 -->
  <view class="management-section">
    <view class="section-title">管理功能</view>
    
    <view class="function-grid">
      <view class="function-item" bindtap="manageAnnouncements">
        <view class="function-icon">📢</view>
        <view class="function-name">公告管理</view>
        <view class="function-desc">发布和管理学校公告</view>
      </view>

      <view class="function-item" bindtap="manageArticles">
        <view class="function-icon">📰</view>
        <view class="function-name">文章管理</view>
        <view class="function-desc">管理校园新闻文章</view>
      </view>

      <view class="function-item" bindtap="manageStudents">
        <view class="function-icon">👥</view>
        <view class="function-name">学生管理</view>
        <view class="function-desc">管理学生信息和档案</view>
      </view>

      <view class="function-item" bindtap="viewLogs">
        <view class="function-icon">📋</view>
        <view class="function-name">操作日志</view>
        <view class="function-desc">查看系统操作记录</view>
      </view>

      <view class="function-item" bindtap="systemSettings">
        <view class="function-icon">⚙️</view>
        <view class="function-name">系统设置</view>
        <view class="function-desc">配置系统参数</view>
      </view>
    </view>
  </view>

  <!-- 快捷操作 -->
  <view class="quick-actions">
    <view class="section-title">快捷操作</view>
    <view class="action-buttons">
      <button class="action-btn btn-primary" bindtap="manageAnnouncements">
        发布公告
      </button>
      <button class="action-btn btn-secondary" bindtap="manageStudents">
        添加学生
      </button>
    </view>
  </view>
</view>
