<!--pages/admin/admin.wxml-->
<view class="admin-container">
  <!-- 管理员信息卡片 -->
  <view class="admin-profile-card">
    <view class="profile-header">
      <view class="admin-avatar">
        <text class="avatar-icon">⚙️</text>
      </view>
      <view class="admin-info">
        <text class="admin-name">{{adminInfo.name}}</text>
        <text class="admin-role">系统管理员</text>
      </view>
    </view>
    <view class="logout-btn" bindtap="logout">
      <text>退出登录</text>
    </view>
  </view>

  <!-- 数据统计卡片 - 可点击跳转 -->
  <view class="stats-section">
    <text class="section-title">📊 数据统计</text>
    <view class="stats-grid">
      <view class="stat-card clickable" bindtap="manageStudents">
        <view class="stat-icon students">👥</view>
        <view class="stat-info">
          <text class="stat-value">{{stats.totalStudents}}</text>
          <text class="stat-label">学生总数</text>
        </view>
        <view class="stat-arrow">→</view>
      </view>
      
      <view class="stat-card clickable" bindtap="managePhotographers">
        <view class="stat-icon photographers">📷</view>
        <view class="stat-info">
          <text class="stat-value">{{stats.totalPhotographers}}</text>
          <text class="stat-label">摄影师</text>
        </view>
        <view class="stat-arrow">→</view>
      </view>
      
      <view class="stat-card clickable" bindtap="manageAnnouncements">
        <view class="stat-icon announcements">📢</view>
        <view class="stat-info">
          <text class="stat-value">{{stats.totalAnnouncements}}</text>
          <text class="stat-label">公告数量</text>
        </view>
        <view class="stat-arrow">→</view>
      </view>
      
      <view class="stat-card clickable" bindtap="manageBanners">
        <view class="stat-icon banners">🖼️</view>
        <view class="stat-info">
          <text class="stat-value">{{stats.totalBanners}}</text>
          <text class="stat-label">轮播图</text>
        </view>
        <view class="stat-arrow">→</view>
      </view>
      
      <view class="stat-card clickable" bindtap="manageActivities">
        <view class="stat-icon activities">🎯</view>
        <view class="stat-info">
          <text class="stat-value">{{stats.totalActivities}}</text>
          <text class="stat-label">活动数量</text>
        </view>
        <view class="stat-arrow">→</view>
      </view>
    </view>
  </view>

  <!-- 管理功能区 -->
  <view class="management-section">
    <text class="section-title">🛠️ 管理功能</text>
    <view class="function-grid">
      <view class="function-card" bindtap="manageBanners">
        <view class="function-icon banners">🖼️</view>
        <text class="function-title">轮播图管理</text>
        <text class="function-desc">上传和管理首页轮播图</text>
        <view class="function-arrow">→</view>
      </view>

      <view class="function-card" bindtap="manageAnnouncements">
        <view class="function-icon announcements">📢</view>
        <text class="function-title">公告管理</text>
        <text class="function-desc">发布和管理学校公告</text>
        <view class="function-arrow">→</view>
      </view>

      <view class="function-card" bindtap="manageStudents">
        <view class="function-icon students">👥</view>
        <text class="function-title">学生管理</text>
        <text class="function-desc">管理学生信息和档案</text>
        <view class="function-arrow">→</view>
      </view>

      <view class="function-card" bindtap="managePhotographers">
        <view class="function-icon photographers">📷</view>
        <text class="function-title">摄影师管理</text>
        <text class="function-desc">管理摄影师和作品</text>
        <view class="function-arrow">→</view>
      </view>

      <view class="function-card" bindtap="manageActivities">
        <view class="function-icon activities">🎯</view>
        <text class="function-title">活动管理</text>
        <text class="function-desc">管理活动和订单</text>
        <view class="function-arrow">→</view>
      </view>
    </view>
  </view>
</view>
