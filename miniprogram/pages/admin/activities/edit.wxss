/* pages/admin/activities/edit.wxss */
.activity-edit-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.form-scroll {
  height: calc(100vh - 140rpx);
}

/* 表单区块 */
.form-section {
  background: white;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input,
.picker {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.textarea.large {
  min-height: 200rpx;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 300rpx;
}

.cover-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-btn {
  width: 100%;
  height: 100%;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-icon {
  font-size: 64rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn-small {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #999;
  background: #fafafa;
}

/* 摄影师选择 */
.btn-select {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
}

.photographers-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.photographer-chip {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 24rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.btn-save {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 48rpx;
  border: none;
}

.btn-save:active {
  opacity: 0.9;
}

