/* 多选弹层样式 */
.picker-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.picker-panel {
  position: fixed;
  left: 0; 
  right: 0; 
  bottom: 0;
  height: 80vh;
  max-height: 1200rpx;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.15);
}

@keyframes slideUp {
  from { 
    transform: translateY(100%); 
    opacity: 0;
  }
  to { 
    transform: translateY(0); 
    opacity: 1;
  }
}

/* 弹窗头部 */
.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.picker-title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #1a1a1a;
}

.picker-btn-close {
  width: 56rpx;
  height: 56rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  border: none;
  padding: 0;
  line-height: 1;
}

/* 工具栏 */
.picker-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.picker-select-all {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-count {
  font-size: 26rpx;
  color: #1a56db;
  font-weight: 600;
}

/* 多选框样式 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #d1d5db;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.checkbox.checked {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  border-color: #1a56db;
}

.checkbox-icon {
  color: white;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 1;
}

/* 搜索框 */
.picker-search { 
  padding: 20rpx 32rpx; 
  flex-shrink: 0;
}

.search-input { 
  width: 100%;
  background: #f5f5f5; 
  border-radius: 16rpx; 
  padding: 20rpx 24rpx; 
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.search-input:focus {
  background: white;
  border-color: #1a56db;
}

/* 列表 */
.picker-list { 
  flex: 1; 
  padding: 8rpx 16rpx;
  overflow-y: auto;
}

.picker-item { 
  display: flex; 
  align-items: center; 
  gap: 20rpx; 
  padding: 20rpx 16rpx; 
  border-radius: 16rpx;
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
  background: white;
}

.picker-item.selected {
  background: #eff6ff;
}

.picker-item:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

/* 头像 */
.picker-avatar { 
  width: 80rpx; 
  height: 80rpx; 
  border-radius: 50%; 
  flex-shrink: 0;
  border: 2rpx solid #f0f0f0;
}

.picker-avatar.placeholder { 
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
  color: #fff; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-weight: 700;
  font-size: 32rpx;
}

/* 信息 */
.picker-info { 
  flex: 1; 
  display: flex; 
  flex-direction: column; 
  gap: 8rpx;
  min-width: 0;
}

.picker-name { 
  font-size: 30rpx; 
  font-weight: 600; 
  color: #1a1a1a;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-sub { 
  font-size: 24rpx; 
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.picker-loadmore { 
  text-align: center; 
  padding: 32rpx; 
  color: #1a56db;
  font-size: 28rpx;
}

/* 底部按钮 */
.picker-footer {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.picker-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.2s ease;
}

.picker-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.picker-btn.primary {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(26, 86, 219, 0.3);
}

.picker-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}
/* pages/admin/activities/edit.wxss */
.activity-edit-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.form-scroll {
  height: calc(100vh - 140rpx);
}

/* 表单区块 */
.form-section {
  background: white;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input,
.picker {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.textarea.large {
  min-height: 200rpx;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 300rpx;
}

.cover-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-btn {
  width: 100%;
  height: 100%;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-icon {
  font-size: 64rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn-small {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #d0d0d0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #999;
  background: #fafafa;
}

/* 摄影师选择 */
.btn-select {
  width: 100%;
  padding: 24rpx;
  background: #f5f5f5;
  color: #333;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
}

.photographers-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.photographer-chip {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 24rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.btn-save {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 48rpx;
  border: none;
}

.btn-save:active {
  opacity: 0.9;
}

