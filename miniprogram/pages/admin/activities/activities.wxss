/* pages/admin/activities/activities.wxss */
.activities-admin-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* ==================== 顶部操作栏 ==================== */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: white;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  font-weight: 600;
}

.btn-create {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
  color: white;
  border-radius: 40rpx;
  border: none;
  font-weight: 600;
}

/* ==================== 活动列表 ==================== */
.activity-list {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  transition: all 0.3s;
}

.activity-item.inactive {
  opacity: 0.6;
}

.activity-cover {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* ==================== 信息区域 ==================== */
.info-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.activity-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

.status-badge {
  padding: 4rpx 16rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  font-weight: 600;
}

.status-badge.active {
  background: #d1fae5;
  color: #059669;
}

.status-badge.inactive {
  background: #fee2e2;
  color: #dc2626;
}

.activity-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* ==================== 详情信息 ==================== */
.info-details {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.detail-item {
  display: flex;
  align-items: baseline;
  font-size: 24rpx;
}

.detail-item .label {
  color: #999;
}

.detail-item .value {
  color: #666;
  margin-left: 4rpx;
}

.detail-item .value.price {
  color: #ff4d4f;
  font-weight: 600;
}

/* ==================== 标签 ==================== */
.info-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  border-radius: 16rpx;
  font-weight: 600;
}

.tag-hot {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
}

.tag-new {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.tag-special {
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}

/* ==================== 操作按钮 ==================== */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: auto;
}

.btn-action {
  flex: 1;
  padding: 16rpx 0;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-edit {
  background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
  color: white;
}

.btn-toggle {
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
  color: white;
}

.btn-delete {
  background: linear-gradient(135deg, #ef4444 0%, #f87171 100%);
  color: white;
}

.btn-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.btn-create-empty {
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #1a56db 0%, #3b82f6 100%);
  color: white;
  border-radius: 48rpx;
  border: none;
}

/* ==================== 加载状态 ==================== */
.loading-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

