.review-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 头部统计 */
.header {
  background: linear-gradient(135deg, #1a56db 0%, #4096ff 100%);
  padding: 40rpx 32rpx;
  color: white;
}

.stat {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.count {
  font-size: 64rpx;
  font-weight: bold;
}

.label {
  font-size: 28rpx;
  opacity: 0.9;
}

.tip {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 加载和空状态 */
.loading, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 订单列表 */
.orders-list {
  padding: 24rpx 24rpx 0;
}

.order-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-main {
  cursor: pointer;
  transition: background 0.2s;
}

.card-main:active {
  background: #fafafa;
}

/* 订单信息 */
.order-info {
  padding: 24rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.activity-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.photographer {
  font-size: 26rpx;
  color: #666;
}

.submit-time {
  font-size: 24rpx;
  color: #999;
}

/* 图片展示区（核心） */
.photos-section {
  padding: 24rpx;
}

.photos-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tap-hint {
  font-size: 22rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 时间线区域 */
.timeline-section {
  padding: 0 24rpx 24rpx;
  border-top: 1rpx dashed #e0e0e0;
  margin-top: 24rpx;
  padding-top: 20rpx;
}

.timeline-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 16rpx;
}

.timeline-compact {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #d9d9d9;
  margin-top: 6rpx;
  flex-shrink: 0;
}

.timeline-dot.active {
  background: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.timeline-content {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-label {
  font-size: 26rpx;
  color: #666;
}

.timeline-item.current .timeline-label {
  color: #1890ff;
  font-weight: 600;
}

.timeline-time {
  font-size: 22rpx;
  color: #999;
}

/* 快速操作按钮 */
.actions {
  display: flex;
  gap: 12rpx;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background: white;
  position: relative;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 通过按钮 */
.action-btn.approve {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.action-btn.approve:active {
  opacity: 0.8;
}

/* 拒绝按钮 */
.action-btn.reject {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: white;
}

.action-btn.reject:active {
  opacity: 0.8;
}

/* 详情提示 */
.detail-hint {
  position: absolute;
  top: -32rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 22rpx;
  color: #999;
  background: white;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

.btn-text {
  font-size: 28rpx;
}

