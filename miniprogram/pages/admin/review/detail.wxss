.review-detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx; /* 为固定底部按钮留空间 */
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  color: #999;
}

/* 区块通用样式 */
.reference-section,
.works-section,
.timeline-section,
.info-section {
  background: white;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
  flex-wrap: wrap;
}

.section-icon {
  font-size: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.section-subtitle {
  font-size: 22rpx;
  color: #999;
  margin-left: auto;
}

/* 活动参考 */
.activity-reference {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx dashed #3b82f6;
}

.activity-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.activity-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.activity-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.activity-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.activity-price {
  font-size: 26rpx;
  color: #ef4444;
  font-weight: 600;
  margin-top: auto;
}

/* 摄影师备注 */
.photographer-note {
  background: #f0f9ff;
  border-left: 4rpx solid #3b82f6;
  padding: 16rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}

.note-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #3b82f6;
  margin-bottom: 8rpx;
}

.note-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 作品图片网格 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.photo-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 时间线 */
.timeline {
  position: relative;
}

.timeline-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 7rpx;
  top: 32rpx;
  bottom: -24rpx;
  width: 2rpx;
  background: #e5e7eb;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #d1d5db;
  margin-top: 8rpx;
  flex-shrink: 0;
  z-index: 1;
}

.timeline-dot.active {
  background: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.2);
}

.timeline-dot.submit {
  background: #8b5cf6;
}

.timeline-dot.reject {
  background: #ef4444;
}

.timeline-item.current {
  background: #f0f9ff;
  margin: 0 -16rpx 24rpx;
  padding: 16rpx;
  border-radius: 12rpx;
}

.timeline-content {
  flex: 1;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.timeline-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.timeline-item.current .timeline-label {
  color: #3b82f6;
}

.timeline-time {
  font-size: 22rpx;
  color: #999;
}

.timeline-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 拒绝原因框 */
.reject-reason-box {
  background: #fff;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.reject-reason-box.admin {
  border-left: 4rpx solid #ef4444;
}

.reject-reason-box.user {
  border-left: 4rpx solid #f59e0b;
}

.reject-label {
  font-size: 22rpx;
  font-weight: 600;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.reject-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  display: block;
}

.reject-meta {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 当前照片提示 */
.current-photos {
  margin-top: 12rpx;
  padding: 12rpx;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 8rpx;
  text-align: center;
}

.photos-label {
  font-size: 22rpx;
  color: #3b82f6;
}

/* 历史照片 */
.history-photos {
  margin-top: 12rpx;
  padding: 12rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

.history-label {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.history-photos-grid {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.history-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  border: 2rpx solid #e5e7eb;
}

/* 基本信息 */
.info-row {
  display: flex;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  width: 140rpx;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 40rpx;
}

.action-btn.approve {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.action-btn.approve:active {
  opacity: 0.8;
}

.action-btn.reject {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: white;
}

.action-btn.reject:active {
  opacity: 0.8;
}

