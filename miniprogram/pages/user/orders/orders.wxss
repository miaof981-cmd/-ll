/* 页面容器 */
.orders-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部栏 */
.top-bar {
  background: white;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 状态筛选 */
.status-filter {
  background: white;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 16rpx;
}

.filter-tab {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
  flex-shrink: 0;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: 500;
}

/* 订单列表 */
.orders-list {
  padding: 24rpx 32rpx;
}

.loading-tip {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.empty-btn {
  display: inline-block;
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 订单卡片 */
.order-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

/* 订单内容 */
.order-content {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.activity-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.order-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  justify-content: center;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.photographer-name {
  font-size: 24rpx;
  color: #666;
}

.order-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #f59e0b;
}

/* 订单操作 */
.order-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  justify-content: flex-end;
}

.action-btn {
  padding: 12rpx 28rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-pay {
  background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
  color: white;
}

.action-cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.action-contact {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: white;
}

.action-after_sale {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: white;
}

.action-evaluate {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
}

