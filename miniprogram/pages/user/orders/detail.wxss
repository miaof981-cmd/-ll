.order-detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

/* 状态卡片 */
.status-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-icon {
  font-size: 80rpx;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
}

.status-time {
  font-size: 24rpx;
  color: #999;
}

/* 通用卡片 */
.section-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 时间线卡片 */
.timeline-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.timeline-card .section-title {
  color: white;
  border-bottom-color: rgba(255, 255, 255, 0.2);
}

/* 时间线 */
.timeline {
  position: relative;
}

.timeline-item {
  position: relative;
  padding-left: 60rpx;
  padding-bottom: 40rpx;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 40rpx;
  bottom: -10rpx;
  width: 2rpx;
  background: rgba(255, 255, 255, 0.3);
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.timeline-dot.active {
  background: white;
  border-color: white;
  box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.2);
}

.timeline-dot.success {
  background: #52c41a;
  border-color: #52c41a;
  box-shadow: 0 0 0 6rpx rgba(82, 196, 26, 0.2);
}

.timeline-dot.warning {
  background: #faad14;
  border-color: #faad14;
  box-shadow: 0 0 0 6rpx rgba(250, 173, 20, 0.2);
}

.timeline-content {
  flex: 1;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.timeline-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.timeline-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.timeline-desc.reject {
  color: #fff3cd;
  background: rgba(250, 173, 20, 0.2);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.timeline-note {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 8rpx;
}

.timeline-tip {
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: white;
  line-height: 1.6;
}

/* 高亮时间线项 */
.timeline-item.highlight {
  background: rgba(255, 255, 255, 0.1);
  margin: 0 -20rpx;
  padding-left: 80rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 12rpx;
}

.timeline-item.highlight::before {
  left: 40rpx;
}

.timeline-item.highlight .timeline-dot {
  left: 30rpx;
}

/* 时间线中的照片预览 */
.timeline-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.timeline-photo-item {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.timeline-photo-img {
  width: 100%;
  height: 100%;
}

.watermark-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

/* 详情卡片 */
.detail-card {
  background: white;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-section-header {
  margin-bottom: 16rpx;
}

.detail-section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
}

.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 24rpx 0;
}

/* 活动信息（紧凑版） */
.activity-info-compact {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.activity-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.activity-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.activity-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.activity-subtitle {
  font-size: 22rpx;
  color: #999;
}

.activity-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
}

/* 摄影师信息（紧凑版） */
.photographer-info-compact {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.photographer-avatar-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.photographer-avatar-small.placeholder {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
}

.photographer-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.photographer-name-small {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.photographer-specialty-small {
  font-size: 22rpx;
  color: #999;
}

/* 订单信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row .label {
  font-size: 26rpx;
  color: #666;
}

.info-row .value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.info-row .value.code {
  font-family: 'Courier New', monospace;
  color: #666;
}

.info-row .value.price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.confirm-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.reject-btn {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 拒绝原因弹窗 */
.reject-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 1;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.modal-body {
  padding: 32rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.reject-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 0 32rpx 32rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 水印画布 */
.watermark-overlay {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
}

.watermark-canvas {
  width: 750rpx;
  height: 1000rpx;
}
