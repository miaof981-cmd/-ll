<view class="orders-page">
  <!-- 顶部栏 -->
  <view class="top-bar">
    <view class="page-title">我的订单</view>
  </view>

  <!-- 状态筛选 -->
  <scroll-view class="status-filter" scroll-x>
    <view class="filter-tabs">
      <view
        wx:for="{{statusFilters}}"
        wx:key="id"
        class="filter-tab {{activeStatus === item.id ? 'active' : ''}}"
        bindtap="switchStatus"
        data-status="{{item.id}}"
      >
        {{item.name}}
      </view>
    </view>
  </scroll-view>

  <!-- 订单列表 -->
  <view class="orders-list">
    <view wx:if="{{loading}}" class="loading-tip">
      <text>加载中...</text>
    </view>

    <view wx:elif="{{filteredOrders.length === 0}}" class="empty-tip">
      <text class="empty-icon">📋</text>
      <text class="empty-text">暂无订单</text>
      <view class="empty-btn" bindtap="goActivities">去看看活动</view>
    </view>

    <view
      wx:for="{{filteredOrders}}"
      wx:key="_id"
      class="order-card"
      bindtap="viewOrder"
      data-id="{{item._id}}"
    >
      <!-- 订单状态 -->
      <view class="order-header">
        <view class="order-time">{{item.createdAtText}}</view>
        <view class="order-status">
          <text class="status-dot" style="background-color: {{item.statusColor}}"></text>
          <text class="status-text" style="color: {{item.statusColor}}">{{item.statusText}}</text>
        </view>
      </view>

      <!-- 活动信息 -->
      <view class="order-content">
        <image 
          wx:if="{{item.activityInfo && item.activityInfo.coverImage}}" 
          class="activity-cover" 
          src="{{item.activityInfo.coverImage}}" 
          mode="aspectFill"
          binderror="onImageError"
        ></image>
        <view class="order-info">
          <text class="activity-title">{{item.activityInfo ? item.activityInfo.title : '活动已删除'}}</text>
          
          <!-- 摄影师和用户信息 -->
          <view class="user-photographer-row">
            <!-- 下单用户 -->
            <view class="user-info-mini">
              <user-avatar 
                openid="{{item.userId || item._openid}}"
                size="60"
                round="{{true}}"
                custom-class="mini-avatar"
              ></user-avatar>
              <text class="mini-name">{{item.userNickName || '用户'}}</text>
            </view>
            
            <!-- 摄影师 -->
            <view wx:if="{{item.photographerInfo}}" class="photographer-info-mini">
              <user-avatar 
                openid="{{item.photographerInfo._openid}}"
                size="60"
                round="{{true}}"
                custom-class="mini-avatar"
              ></user-avatar>
              <text class="mini-name">{{item.photographerInfo.name}}</text>
            </view>
          </view>
          
          <text class="order-price">¥{{item.totalPrice}}</text>
        </view>
      </view>

      <!-- 摄影师作品预览 -->
      <view wx:if="{{item.photos && item.photos.length > 0}}" class="order-photos">
        <view class="photos-preview">
          <image
            wx:for="{{item.photos}}"
            wx:key="index"
            wx:if="{{index < 3}}"
            class="photo-thumb"
            src="{{item}}"
            mode="aspectFill"
            binderror="onImageError"
          ></image>
          <view wx:if="{{item.photos.length > 3}}" class="more-photos">
            <text>+{{item.photos.length - 3}}</text>
          </view>
        </view>
        <text class="photos-count">共{{item.photos.length}}张作品</text>
      </view>

      <!-- 待确认提示 -->
      <view wx:if="{{item.status === 'pending_confirm'}}" class="pending-confirm-tip">
        <text class="tip-icon">💡</text>
        <text class="tip-text">摄影师已提交作品，请查看并确认</text>
      </view>

      <!-- 订单操作 -->
      <view class="order-actions" catchtap>
        <!-- 待确认状态：显示特殊按钮 -->
        <view wx:if="{{item.status === 'pending_confirm'}}" class="confirm-actions-inline">
          <view class="action-btn reject-action" bindtap="rejectOrder" data-id="{{item._id}}" catchtap>
            ❌ 拒绝
          </view>
          <view class="action-btn confirm-action" bindtap="confirmOrder" data-id="{{item._id}}" catchtap>
            ✅ 确认
          </view>
        </view>
        
        <!-- 其他状态：显示原有按钮 -->
        <view wx:elif="{{item.userActions && item.userActions.length > 0}}" class="normal-actions">
          <view
            wx:for="{{item.userActions}}"
            wx:key="index"
            wx:for-item="action"
            class="action-btn action-{{action}}"
            bindtap="handleAction"
            data-id="{{item._id}}"
            data-action="{{action}}"
            catchtap
          >
            {{getActionText(action)}}
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

