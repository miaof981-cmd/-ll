/* pages/index/index.wxss - 现代学校官网首页 */

.page-container {
  min-height: 100vh;
  background: var(--bg-secondary);
}

/* ==================== 顶部导航栏 ==================== */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: var(--bg-primary);
  box-shadow: var(--shadow-sm);
}

.header-content {
  padding: 32rpx var(--spacing-lg);
}

.logo-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo-icon {
  font-size: 48rpx;
}

.logo-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-dark);
  letter-spacing: 2rpx;
}

/* ==================== 主内容区 ==================== */
.main-content {
  padding-bottom: 40rpx;
}

/* ==================== 轮播图区域 ==================== */
.banner-section {
  background: var(--bg-primary);
}

.banner-swiper {
  width: 100%;
  transition: height 0.3s ease;
}

.banner-image {
  width: 100%;
  display: block;
}

/* ==================== 内容区块 ==================== */
.content-section {
  margin: var(--spacing-lg);
  margin-top: var(--spacing-xl);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
}

.section-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  font-size: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-dark);
}

/* ==================== 公告卡片 ==================== */
.announcement-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.announcement-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  transition: all 0.3s ease;
}

.announcement-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.announcement-cover {
  width: 100%;
  display: block;
}

.announcement-body {
  padding: var(--spacing-lg);
  border-left: 6rpx solid var(--primary-color);
}

.announcement-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.announcement-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
}

.announcement-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.announcement-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.announcement-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  display: flex;
  align-items: center;
  gap: 6rpx;
}

/* ==================== 新闻卡片 ==================== */
.news-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.news-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.news-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-light) 100%);
  transition: width 0.3s ease;
}

.news-card:active::before {
  width: 100%;
  opacity: 0.05;
}

.news-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.news-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.news-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.news-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.news-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.news-action {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}
