/* pages/index/index.wxss - 现代学校官网首页 */

.page-container {
  min-height: 100vh;
  background: var(--bg-secondary);
}

/* ==================== 顶部导航栏 ==================== */
.header {
  position: sticky;
  top: 0;
  z-index: 100;
  /* 优化：浅蓝色渐变背景，与主题蓝色自然过渡 */
  background: linear-gradient(180deg, #e8f0fe 0%, #f0f5ff 100%);
  /* 优化：移除阴影，视觉更轻盈 */
}

.header-content {
  /* 优化：减少 padding，高度减少约 44% */
  padding: 18rpx var(--spacing-lg);
}

.logo-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo-icon {
  font-size: 48rpx;
}

.logo-text {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-dark);
  letter-spacing: 2rpx;
}

/* ==================== 主内容区 ==================== */
.main-content {
  padding-bottom: 40rpx;
}

/* ==================== 轮播图区域 ==================== */
.banner-section {
  background: var(--bg-primary);
  /* 优化：移除轮播图底部可能的留白 */
  margin-bottom: 0;
  padding-bottom: 0;
}

.banner-swiper {
  width: 100%;
  transition: height 0.3s ease;
  /* 优化：确保轮播图紧贴底部，无留白 */
  display: block;
  margin: 0;
  padding: 0;
}

.banner-image {
  width: 100%;
  display: block;
  /* 优化：移除图片可能的底部间隙 */
  vertical-align: bottom;
}

/* ==================== 内容区块 ==================== */
.content-section {
  margin: var(--spacing-lg);
  /* 优化：轮播图下方的第一个标题栏，上边距精确控制，确保视觉居中 */
  margin-top: 28rpx;
}

/* 优化：第一个内容区块（学校公告）的特殊处理 */
.content-section:first-of-type {
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 优化：上下边距完全相等，确保视觉居中 */
  margin-bottom: 16rpx;
  /* 优化：移除 padding，让标题栏更窄 */
  padding: 0;
}

.section-title-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  /* 优化：图标略微缩小，整体更协调 */
  font-size: 36rpx;
}

.section-title {
  /* 优化：标题字号略微缩小，高度更合理 */
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-dark);
  /* 优化：确保标题文字垂直居中 */
  line-height: 1.2;
}

/* ==================== 公告卡片 ==================== */
.announcement-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.announcement-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  transition: all 0.3s ease;
}

.announcement-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

.announcement-cover {
  width: 100%;
  display: block;
}

.announcement-body {
  padding: var(--spacing-lg);
  border-left: 6rpx solid var(--primary-color);
}

.announcement-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.announcement-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.4;
}

.announcement-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.announcement-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.announcement-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
  display: flex;
  align-items: center;
  gap: 6rpx;
}
