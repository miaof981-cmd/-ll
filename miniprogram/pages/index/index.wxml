<!--pages/index/index.wxml-->
<view class="page-container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <view class="header-content">
      <view class="logo-section">
        <text class="logo-icon">🎓</text>
        <text class="logo-text">学校官网</text>
      </view>
    </view>
  </view>

  <!-- 主内容区 -->
  <view class="main-content">
    <!-- 轮播图区域 - 自适应高度 -->
    <view wx:if="{{banners.length > 0}}" class="banner-section">
      <swiper 
        class="banner-swiper" 
        style="height: {{bannerHeight}}px"
        autoplay="{{true}}" 
        interval="3000" 
        duration="500" 
        circular="{{true}}"
        bindchange="onBannerChange"
      >
        <swiper-item wx:for="{{banners}}" wx:key="id">
          <image 
            class="banner-image" 
            src="{{item.imageUrl}}" 
            mode="widthFix"
            bindload="onBannerImageLoad"
            data-index="{{index}}"
          />
        </swiper-item>
      </swiper>
    </view>

    <!-- 学校公告区 -->
    <view class="content-section">
      <view class="section-header">
        <view class="section-title-wrapper">
          <view class="section-icon">📢</view>
          <text class="section-title">学校公告</text>
        </view>
      </view>

      <view wx:if="{{announcements.length === 0}}" class="empty-state">
        <view class="empty-icon">📝</view>
        <text class="empty-text">暂无公告</text>
      </view>

      <view class="announcement-list">
        <view 
          wx:for="{{announcements}}" 
          wx:key="id" 
          class="announcement-card fade-in"
          style="animation-delay: {{index * 0.1}}s"
          bindtap="viewAnnouncement" 
          data-announcement="{{item}}"
        >
          <!-- 公告封面图 -->
          <image 
            wx:if="{{item.coverImage}}" 
            class="announcement-cover" 
            src="{{item.coverImage}}" 
            mode="widthFix"
          />
          
          <view class="announcement-body">
            <view class="announcement-header">
              <text class="announcement-title">{{item.title}}</text>
              <view wx:if="{{item.pinned}}" class="tag tag-danger">置顶</view>
            </view>
            <view class="announcement-content">{{item.content}}</view>
            <view class="announcement-footer">
              <text class="announcement-time">📅 {{item.createdAt}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 活动展示区 -->
    <view class="content-section">
      <view class="section-header">
        <view class="section-title-wrapper">
          <view class="section-icon">🎯</view>
          <text class="section-title">全部活动</text>
        </view>
      </view>

      <!-- 分类筛选 -->
      <scroll-view class="category-tabs" scroll-x="true" enable-flex="true">
        <view 
          wx:for="{{categories}}" 
          wx:key="id" 
          class="category-tab {{activeCategory === item.id ? 'active' : ''}}"
          bindtap="switchCategory"
          data-category="{{item.id}}"
        >
          {{item.name}}
        </view>
      </scroll-view>

      <!-- 活动列表 -->
      <view wx:if="{{activities.length === 0}}" class="empty-state">
        <view class="empty-icon">🎨</view>
        <text class="empty-text">暂无活动</text>
      </view>

      <view class="activity-grid">
        <view 
          wx:for="{{activities}}" 
          wx:key="_id" 
          class="activity-card fade-in"
          style="animation-delay: {{index * 0.1}}s"
          bindtap="viewActivity"
          data-id="{{item._id}}"
        >
          <!-- 活动封面 -->
          <view class="activity-cover-wrap">
            <image class="activity-cover" src="{{item.coverImage}}" mode="aspectFill" />
            <!-- 标签 -->
            <view class="activity-badges">
              <view wx:if="{{item.isHot}}" class="badge badge-hot">🔥 热门</view>
              <view wx:if="{{item.isNew}}" class="badge badge-new">🆕 新品</view>
            </view>
          </view>

          <!-- 活动信息 -->
          <view class="activity-info">
            <text class="activity-title">{{item.title}}</text>
            <text class="activity-subtitle">{{item.subtitle}}</text>
            
            <view class="activity-footer">
              <view class="activity-price">
                <text class="price-current">¥{{item.price}}</text>
                <text wx:if="{{item.originalPrice > item.price}}" class="price-original">¥{{item.originalPrice}}</text>
              </view>
              <view class="activity-stats">
                <text class="stat-item">👁 {{item.viewCount || 0}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
