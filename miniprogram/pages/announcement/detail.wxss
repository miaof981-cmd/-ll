/* pages/announcement/detail.wxss */

.detail-container {
  min-height: 100vh;
  background: var(--bg-secondary);
  position: relative;
}

/* 浮动返回按钮 */
.float-back-btn {
  position: fixed;
  top: calc(env(safe-area-inset-top) + 10rpx);
  left: 24rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.back-icon {
  font-size: 40rpx;
  color: #1a56db;
  font-weight: bold;
}

/* 封面图片 */
.cover-image {
  width: 100%;
  display: block;
  background: var(--bg-primary);
}

/* 内容区域 */
.content-section {
  background: var(--bg-primary);
  padding: var(--spacing-xl);
}

/* 标题区域 */
.title-area {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: var(--spacing-lg);
}

.title {
  flex: 1;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-dark);
  line-height: 1.4;
}

/* 元信息 */
.meta-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: var(--spacing-lg);
}

.meta-icon {
  font-size: 28rpx;
}

.meta-text {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--border-light);
  margin: var(--spacing-lg) 0;
}

/* 正文内容 */
.content-text {
  font-size: 30rpx;
  color: var(--text-primary);
  line-height: 2;
  white-space: pre-wrap;
  word-break: break-all;
}
